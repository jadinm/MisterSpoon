            android:name="spoon.misterspoon.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- We declare the activity Profil_Client -->
        <activity 
            android:name="spoon.misterspoon.Profil_Client"
            android:label="@string/profil_client_title">
