<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <Gallery
                android:id="@+id/gallery1"
                android:layout_width="match_parent"
                android:layout_height="253dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/profil_restaurant_tel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:hint="@string/profil_restaurant_tel"
                android:lines="2"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/profil_restaurant_fax"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="@string/profil_restaurant_fax"
                android:lines="2"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/profil_restaurant_web"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:hint="@string/profil_restaurant_web"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/profil_restaurant_mail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="@string/profil_restaurant_mail"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/profil_restaurant_mail_perso"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/profil_restaurant_mail_perso"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/profil_restaurant_adress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/profil_restaurant_adress"
                android:textIsSelectable="true" >
            </TextView>

            <TextView
                android:id="@+id/profil_restaurant_description"
                android:layout_width="fill_parent"
                android:layout_height="151dp"
                android:hint="@string/profil_restaurant_description"
                android:textIsSelectable="true" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp" >

                <Button
                    android:id="@+id/profil_restaurant_carte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/carte"
                    android:gravity="right"
                    android:text="@string/profil_restaurant_carte" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:weightSum="2" >

                <Button
                    android:id="@+id/profil_restaurant_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profil_restaurant_gps" />

                <Button
                    android:id="@+id/profil_restaurant_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profil_restaurant_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:weightSum="2" >

                <Button
                    android:id="@+id/profil_restaurant_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profil_restaurant_reservation" />

                <Button
                    android:id="@+id/profil_restaurant_prereservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profil_restaurant_prereservation" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>