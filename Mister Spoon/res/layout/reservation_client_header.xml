<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5" >

    <TextView
        android:id="@+id/heure_header"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/reservation_client_heure"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nom_header"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/reservation_client_nom"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/telephone_header"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/reservation_client_telephone"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

        

    <TextView
        android:id="@+id/places_header"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/reservation_client_places"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantite_header"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/reservation_client_quantite"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView>
    </TextView>

</LinearLayout>