<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2" >

    <ListView
        android:id="@+id/list_restaurant_restaurants"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:gravity="center" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/list_restaurant_ordre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/list_restaurant_filtre_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_restaurant_filtre_note" />

        <EditText
            android:id="@+id/list_restaurant_editText_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/list_restaurant_editText_note"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/list_restaurant_filtre_prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_restaurant_filtre_prix" />

        <EditText
            android:id="@+id/list_restaurant_editText_prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/list_restaurant_editText_prix"
            android:inputType="numberDecimal" />

        <CheckBox
            android:id="@+id/list_restaurant_filtre_favori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_restaurant_filtre_favori" />

        <Button
            android:id="@+id/list_restaurant_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_restaurant_select" />
    </LinearLayout>

</LinearLayout>