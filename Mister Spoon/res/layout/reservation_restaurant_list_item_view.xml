<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:padding="10dp">
    
     <TextView android:id="@+id/reservation_restaurant_item_heure"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textIsSelectable="true"
        android:focusable="false"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
     
     <TextView android:id="@+id/reservation_restaurant_item_nom"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:focusable="false"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
     
     <TextView android:id="@+id/reservation_restaurant_item_telephone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:focusable="false"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
     
     <TextView android:id="@+id/reservation_restaurant_item_places"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textIsSelectable="true"
        android:focusable="false"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
     
     <Spinner android:id="@+id/reservation_restaurant_item_quantite"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
        
</LinearLayout>