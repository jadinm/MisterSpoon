<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >
        
        <EditText 
            android:id="@+id/meal_builder_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/meal_builder_name" />

        <!-- It will contains the images -->
        <HorizontalScrollView
            android:id="@+id/meal_builder_gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:id="@+id/meal_builder_gallery_layout"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal">
                
            </LinearLayout>
            
        </HorizontalScrollView>

        <Button
            android:id="@+id/meal_builder_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/profil_restaurant_add_image" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/meal_builder_price"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/meal_builder_price" />

            <EditText
                android:id="@+id/meal_builder_stock"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                android:hint="@string/meal_builder_stock" />
        </LinearLayout>

        <EditText
            android:id="@+id/meal_builder_description"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:lines="7"
            android:hint="@string/meal_builder_description" />

        <Button
            android:id="@+id/meal_builder_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="@string/meal_builder_update" />
    </LinearLayout>

</ScrollView>