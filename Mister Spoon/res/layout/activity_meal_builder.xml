<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Gallery
                android:id="@+id/gallery1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2.64" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/meal_builder_price"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/meal_builder_price" />

            <EditText
                android:id="@+id/meal_builder_stock"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/meal_builder_stock" />
        </LinearLayout>

        <EditText
            android:id="@+id/meal_builder_description"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:lines="7"
            android:hint="@string/meal_builder_description" />

        <Button
            android:id="@+id/meal_builder_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/meal_builder_update" />
    </LinearLayout>

</ScrollView>