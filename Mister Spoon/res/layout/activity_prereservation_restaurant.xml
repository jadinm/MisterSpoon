<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="70dp"
        android:paddingTop="75dp"
        android:text="@string/prereservation_restaurant_title"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp" >

        <EditText
            android:id="@+id/prereservation_restaurant_heure"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/prereservation_restaurant_heure"
            android:inputType="time" />

        <EditText
            android:id="@+id/prereservation_restaurant_nom"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/prereservation_restaurant_nom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/prereservation_restaurant_telephone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/prereservation_restaurant_telephone"
            android:inputType="phone" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/prereservation_restaurant_places"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/prereservation_restaurant_places" />

        <Spinner
            android:id="@+id/prereservation_restaurant_platQte"
            android:layout_width="139dp"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <ListView
        android:id="@+id/prereservation_restaurant_prereservationList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>