<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:weightSum="22.2" >

    <ExpandableListView
        android:id="@+id/carte_builder_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:layout_weight="0.1"
        android:weightSum="7" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="@string/carte_builder_create_menu" />

        <EditText
            android:id="@+id/carte_builder_menu_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:hint="@string/carte_builder_menu_name"
            android:inputType="text" />

        <Spinner
            android:id="@+id/carte_builder_categorie"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <EditText
            android:id="@+id/carte_builder_price"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:hint="@string/carte_builder_price"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:layout_weight="1"
        android:weightSum="3.5" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:text="@string/carte_builder_add_meal_1" />

        <EditText
            android:id="@+id/carte_builder_meal_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="@string/carte_builder_meal_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/carte_builder_meal_price"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="@string/carte_builder_meal_price"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:layout_weight="1"
        android:weightSum="8" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:layout_weight="7"
            android:text="@string/carte_builder_add_meal_2" />

        <EditText
            android:id="@+id/carte_builder_add_meal_menu_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="@string/carte_builder_menu_name"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:layout_weight="0.1"
        android:id="@+id/carte_builder_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/carte_builder_update" />

</LinearLayout>